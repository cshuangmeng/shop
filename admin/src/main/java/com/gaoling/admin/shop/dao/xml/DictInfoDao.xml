<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.futeplus.vms.dao.DictInfoDao">

	<!-- 保存字典 -->
	<insert id="addDict" useGeneratedKeys="true" keyProperty="id" parameterType="com.futeplus.vms.entity.DictInfo">
		insert into dictInfo(dictCode,dictName,dictValue,orderIndex)
		values(#{dictCode},#{dictName},#{dictValue},#{orderIndex})
	</insert>
	
	<!-- 获取字典 -->
	<select id="getDict" resultType="com.futeplus.vms.entity.DictInfo">
		select * from dictInfo where id=#{id}
	</select>
	
	<!-- 更新字典 -->
	<update id="updateDict" parameterType="com.futeplus.vms.entity.DictInfo">
		update dictInfo set dictCode=#{dictCode},dictName=#{dictName},dictValue=#{dictValue}
		,orderIndex=#{orderIndex} where id=#{id}
	</update>
	
	<!-- 删除字典 -->
	<delete id="deleteDict">
		delete from dictInfo where id=#{id}
	</delete>

	<!-- 加载字典列表 -->
	<select id="loadDicts" resultType="java.util.HashMap">
		select dictName,dictValue from dictInfo where dictCode=#{dictCode} order by orderIndex
	</select>
	
	<!-- 加载指定字典的值 -->
	<select id="getDictName" resultType="String">
		select dictName from dictInfo where dictCode=#{dictCode} and dictValue=#{dictValue}
	</select>
	
	<!-- 加载指定字典的值 -->
	<select id="getDictByName" resultType="com.futeplus.vms.entity.DictInfo">
		select * from dictInfo where dictCode=#{dictCode} and dictName=#{dictName}
	</select>
	
	<!-- 加载所有字典 -->
	<select id="loadAllDicts" resultType="com.futeplus.vms.entity.DictInfo">
		select * from dictInfo order by dictCode,orderIndex
	</select>
	
</mapper>  
