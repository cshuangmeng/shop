<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gaoling.admin.goods.dao.CooperationDao">

	<!-- 表头 -->
	<sql id="shopCooperation">
		select company,website,product,advantage,contact,telephone,create_time createTime from cooperation t
	</sql>

	<!-- 查询所有订单 -->
	<select id="queryCooperations" resultType="com.gaoling.admin.goods.pojo.Cooperation">
		<include refid="shopCooperation"/>
		<if test="param.id!=null">
			and t.id=#{param.id}
		</if>
	</select>

	<!-- 发送合作请求 -->
	<insert id="addCooperation" keyProperty="id" useGeneratedKeys="true" parameterType="com.gaoling.admin.goods.pojo.Cooperation">
		insert into cooperation(company,website,product,advantage,contact,telephone,create_time)
		values(#{company},#{website},#{product},#{advantage},#{contact},#{telephone},#{createTime})
	</insert>
	
</mapper>  
